@{
}
@model StudentDetailsWithMVC.Models.StudentModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Details</title>
</head>
<body>
    @using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
    {
        <center>
            <table cellpadding="10" cellspacing="20" border="1">
                <tr>
                    <th colspan="2" align="center">Student Details</th>
                </tr>
                <tr>
                    <td>Name: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Name)
                    </td>
                </tr>
                <tr>
                    <td>Age: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Age)
                    </td>
                </tr>
                <tr>
                    <td>Address: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Address)
                    </td>
                </tr>
                <tr>
                    <td>PhoneNumber: </td>
                    <td>
                        @Html.TextBoxFor(m => m.PhoneNumber)
                    </td>
                </tr>


            </table>
        </center>
        <br />
        <br />
        <div>
            <center>
                <input type="submit" value="Submit" />
            </center>
        </div>
        <br />
        <br />

        <center>
            <div>
                <font color="green">@ViewBag.message</font>
            </div>
        </center>


    }
</body>
</html>
